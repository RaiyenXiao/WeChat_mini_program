/**app.wxss**/
@import 'libs/css/weui.wxss';
@import "templates/iconfont/iconfont.wxss";
page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*自定义公共样式*/

.text_center {
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 弹性盒  */
._flex {
  display: flex;
}

._flex_item_center {
  align-items: center;
}

._flex_justify_center {
  justify-content: center;
}

._flex_space_between {
  justify-content: space-between;
}

._flex_space_around {
  justify-content: space-around;
}
